<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Management Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="css/tailwind.css">
  <link rel="stylesheet" href="css/dashboard.css">
  <script type="module" src="/js/dashboard.js"></script>
  <script type="module" src="/js/timesetting.js"></script>
  <script src="https://kit.fontawesome.com/60cc3418d0.js" crossorigin="anonymous"></script>
</head>

<body class="bg-gray-100 dark:bg-gray-900 transition-all duration-300 text-gray-800 dark:text-gray-100">

  <!-- Dashboard Container -->
  <div class="container mx-auto py-6 px-4 md:px-8 lg:px-16">

    <!-- Header -->
    <header class="flex flex-wrap items-center justify-between mb-8 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
      <h1 class="text-3xl font-extrabold text-gray-800 dark:text-gray-100">Dashboard</h1>
      <div class="flex items-center space-x-4 mt-4 md:mt-0">
        <img src="<%= user ? user.picture : 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>"
             alt="User Avatar" class="w-12 h-12 rounded-full border-2 border-gray-300 dark:border-gray-700">
        <span class="text-xl font-medium">Welcome, <%= user ? user.username : 'Alex' %></span>
        <button class="toggle-button rounded-full bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition duration-300">
          <i id="darkModeIcon" class="fa-moon dark:text-yellow-400 text-gray-600"></i>
        </button>
      </div>
    </header>

    <!-- Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

      <!-- Task Management Card -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg col-span-full">
        <h2 class="text-2xl font-semibold mb-3">Task Management</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">Organize tasks by dragging & dropping</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

          <!-- To Do Column -->
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-200">
              <i class="fas fa-tasks mr-2"></i>To Do
            </h3>
            <% tasks.todo.forEach(task => { %>
            <div class="task_div flex justify-between bg-white dark:bg-gray-800 p-3 mb-3 rounded-lg shadow-md items-center">
              <p class="text-base font-medium"><%= task.task_name %></p>
              <div class="flex space-x-2 text-lg">
                <button class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-600 transition duration-150 padding-2 margin-2">
                  <i class="fas fa-hourglass-half"></i>
                </button>
                <button class="text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-600 transition duration-150 ">
                  <i class="fas fa-check-circle"></i>
                </button>
              </div>
            </div>
            
            <% }) %>
            <div class="mb-6">
              <button id="add-task-btn" class=" add-task-btn bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-150">
                <i class="fas fa-plus mr-2"></i>Add Task
              </button>
            </div>
          </div>

          <!-- In Progress Column -->
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-200">
              <i class="fas fa-spinner mr-2"></i>In Progress
            </h3>
            <% tasks.pending.forEach(task => { %>
            <div class="task_div flex justify-between bg-white dark:bg-gray-800 p-3 mb-3 rounded-lg shadow-md items-center">
              <p class="text-base font-medium"><%= task.task_name %></p>
              <button class="text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-600 transition duration-150">
                <i class="fas fa-check-circle"></i>
              </button>
            </div>
            <% }) %>
          </div>

          <!-- Done Column -->
          <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-200">
              <i class="fas fa-check-double mr-2"></i>Done
            </h3>
            <% tasks.done.forEach(task => { %>
            <div class="bg-white dark:bg-gray-800 p-3 mb-3 rounded-lg shadow-md">
              <p class="text-base font-medium text-gray-700 dark:text-gray-200"><%= task.task_name %></p>
            </div>
            <% }) %>
          </div>
        </div>
      </div>

      <!-- Pomodoro Timer Card -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-2"><i class="fas fa-stopwatch mr-2"></i>Pomodoro Timer</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">Stay focused with time management</p>
        <div class="text-center">
          <span class="text-5xl font-bold mb-4 block timer">25:00</span>
          <button class="start-timer-btn bg-blue-600 text-white px-5 py-2 rounded-full hover:bg-blue-700 transition duration-150 start-timer-btn">Start</button>
          <button class="bg-red-600 text-white px-5 py-2 mt-4 rounded-full hover:bg-red-700 transition duration-150 set-reminder">Set Timer</button>
        </div>
      </div>

      <!-- AI Task Suggestions Card -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-2"><i class="fas fa-lightbulb mr-2"></i>AI Task Suggestions</h2>
        <ul class="space-y-2 mt-4 text-base text-gray-700 dark:text-gray-300">
          <li>ðŸ“Œ Prioritize project proposal</li>
          <li>ðŸ“… Schedule team check-in</li>
          <li>ðŸ“Š Review latest industry trends</li>
        </ul>
        <button class="bg-blue-600 text-white mt-6 w-full py-2 rounded-full hover:bg-blue-700 transition duration-150">More Suggestions</button>
      </div>

    </div>
  </div>

  <dialog id="taskDialog" class="rounded-lg bg-white dark:bg-gray-800 p-6 shadow-md">
    <form id="taskForm" class="space-y-4">
      <h3 class="text-2xl font-semibold">Add New Task</h3>
      <label for="taskName" class="block text-gray-700 dark:text-gray-300">Task Name:</label>
      <input type="text" id="taskName" name="taskName" class="w-full p-2 rounded-lg border border-gray-300 dark:border-gray-600" required>
      
      <label for="due-date" class="block text-gray-700 dark:text-gray-300">Due Date:</label>
      <input type="date" id="due-date" name="dueDate" class="w-full p-2 rounded-lg border border-gray-300 dark:border-gray-600" required>

      <div class="flex justify-end space-x-4 mt-4">
        <button type="button" id="cancelBtn" class="px-4 py-2 bg-gray-300 dark:bg-gray-600 rounded-lg hover:bg-gray-400 dark:hover:bg-gray-700">Cancel</button>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Add Task</button>
      </div>
    </form>
  </dialog>

  <!-- JavaScript for Dark Mode Toggle -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const toggleButton = document.querySelector(".toggle-button");
      const icon = document.getElementById("darkModeIcon");

      if (toggleButton && icon) {
        toggleButton.addEventListener("click", () => {
          document.body.classList.toggle("dark");
          if (document.body.classList.contains("dark")) {
            icon.classList.replace("fa-moon", "fa-sun");
          } else {
            icon.classList.replace("fa-sun", "fa-moon");
          }
        });
      }
    });
  </script>

</body>
</html>
