<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Management Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="css/dashboard.css">
  <script type="module" src="/js/dashboard.js"></script>
  <script src="https://kit.fontawesome.com/60cc3418d0.js" crossorigin="anonymous"></script>
</head>
<style>
  .task_div {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }
  #todoColumn, #inProgressColumn, #doneColumn {
    display: flex;
    flex-direction: column;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 16px;
  }
</style>
<body class="bg-gray-100 dark:bg-gray-900 transition-all duration-300 text-gray-800 dark:text-gray-100">
  <div class="container mx-auto py-6 px-4 md:px-8 lg:px-16">
    <header class="flex flex-wrap items-center justify-between mb-8 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
      <h1 class="text-3xl font-extrabold text-gray-800 dark:text-gray-100">Dashboard</h1>
      <div class="flex items-center space-x-4 mt-4 md:mt-0">
        <img src="<%= user ? user.picture : 'https://cdn-icons-png.flaticon.com/512/149/149071.png' %>"
             alt="User Avatar" class="w-12 h-12 rounded-full border-2 border-gray-300 dark:border-gray-700">
        <span class="text-xl font-medium">Welcome, <%= user ? user.username : 'Alex' %></span>
        <button class="toggle-button rounded-full bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition duration-300">
          <i id="darkModeIcon" class="fa-moon fa-solid fa-moon dark:text-yellow-400 text-gray-600"></i>
        </button>
      </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg col-span-full">
        <h2 class="text-2xl font-semibold mb-3">Task Management</h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">Organize tasks by dragging & dropping</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

          <div id="todoColumn" class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-200">
              <i class="fas fa-tasks mr-2"></i>To Do
            </h3>
            <% tasks.todo.forEach(task => { %>
            <div class="task_div flex justify-between bg-white dark:bg-gray-800 p-3 mb-3 rounded-lg shadow-md items-center">
              <p class="text-base font-medium">
                <% if (task.priority === 'high') { %>
                  <i class="fas fa-exclamation-circle text-red-500"></i>
                <% } else if (task.priority === 'medium') { %>
                  <i class="fas fa-exclamation-circle text-yellow-500"></i>
                <% } else { %>
                  <i class="fas fa-exclamation-circle text-green-500"></i>
                <% } %>
                <%= task.task_name %>
              </p>
              <div class="flex space-x-2 text-lg">
                <button class="status-btn pending text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-600 transition duration-150">
                  <i class="pending fas fa-hourglass-half mr-2 p-1"></i>
                </button>
                <button class="status-btn done text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-600 transition duration-150">
                  <i class="done fas fa-check-circle mr-2 p-1"></i>
                </button>
              </div>
            </div>
            <% }) %>
            <button id="add-task-btn" class="add-task-btn bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-150">
              <i class="fas fa-plus mr-2"></i>Add Task
            </button>
          </div>

          <div id="inProgressColumn" class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-200">
              <i class="fas fa-spinner mr-2"></i>In Progress
            </h3>
            <% tasks.pending.forEach(task => { %>
            <div class="task_div flex justify-between bg-white dark:bg-gray-800 p-3 mb-3 rounded-lg shadow-md items-center">
              <p class="text-base font-medium"><%= task.task_name %></p>
              <button class="status-btn done text-green-600 dark:text-green-400 hover:text-green-800 dark:hover:text-green-600 transition duration-150">
                <i class="fas fa-check-circle"></i>
              </button>
            </div>
            <% }) %>
          </div>

          <div id="doneColumn" class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-200">
              <i class="fas fa-check-double mr-2"></i>Done
            </h3>
            <% tasks.done.forEach(task => { %>
            <div class="bg-white dark:bg-gray-800 p-3 mb-3 rounded-lg shadow-md">
              <p class="text-base font-medium text-gray-700 dark:text-gray-200"><%= task.task_name %></p>
            </div>
            <% }) %>
          </div>
        </div>
      </div>

      <dialog id="taskDialog" class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <form id="taskForm" method="dialog">
          <h2 class="text-2xl font-semibold mb-4">Add New Task</h2>
          <div class="mb-4">
            <label for="taskName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Task Name</label>
            <input type="text" id="taskName" required class="mt-1 p-2 block w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
          </div>
          <div class="mb-4">
            <label for="due-date" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Due Date</label>
            <input type="date" id="due-date" required class="mt-1 p-2 block w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
          </div>
          <div class="mb-4">
            <label for="priority" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Priority</label>
            <select id="priority" class="mt-1 p-2 block w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
              <option value="low">Low</option>
              <option value="medium">Medium</option>
              <option value="high">High</option>
            </select>
          </div>
          <div class="flex justify-between">
            <button id="cancelBtn" type="button" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">Cancel</button>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Add Task</button>
          </div>
        </form>
      </dialog>
    </div>
  </div>
    </body>
    </html> 
    