<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Time Management Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/custom.css">
</head>

<body class="bg-gray-100 min-h-screen p-8">
  <div class="container mx-auto">
    <!-- Header -->
    <header class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">Time Management Dashboard</h1>
      <div class="flex items-center space-x-4">
        <span class="text-sm text-gray-600">Welcome back, Alex</span>
        <div class="relative w-10 h-10 rounded-full bg-gray-200">
          <img src="/placeholder.svg?height=40&width=40" alt="Alex" class="w-full h-full rounded-full">
          <div class="absolute inset-0 flex items-center justify-center text-sm font-bold">AL</div>
        </div>
      </div>
    </header>

    <!-- Main Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

      <!-- Today's Tasks Card -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-2">Today's Tasks</h2>
        <p class="text-sm text-gray-600 mb-4">Your progress for today</p>
        <div class="flex items-center space-x-4">
          <i class="fas fa-list-ul text-blue-500 text-2xl"></i>
          <div class="flex-1">
            <div class="flex justify-between text-sm font-medium">
              <span>5/8 completed</span>
              <span class="text-gray-500">62.5%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 62.5%;"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Weekly Calendar Card -->
      <div class="bg-white p-6 rounded-lg shadow-md text-center">
        <h2 class="text-xl font-bold mb-2">Weekly Calendar</h2>
        <p class="text-sm text-gray-600 mb-4">Your schedule at a glance</p>
        <i class="far fa-calendar-alt text-blue-500 text-6xl"></i>
      </div>

      <!-- Productivity Card -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-2">Productivity</h2>
        <p class="text-sm text-gray-600 mb-4">Hours worked this week</p>
        <div id="productivity-chart" class="h-32">
          <!-- Bar chart placeholder -->
        </div>
      </div>

      <!-- Upcoming Deadlines Card -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-2">Upcoming Deadlines</h2>
        <p class="text-sm text-gray-600 mb-4">Don't miss these important dates</p>
        <ul class="space-y-2">
          <li class="flex justify-between">
            <span>Project Proposal</span>
            <span class="text-red-500">Tomorrow</span>
          </li>
          <li class="flex justify-between">
            <span>Client Meeting</span>
            <span class="text-yellow-500">In 3 days</span>
          </li>
          <li class="flex justify-between">
            <span>Quarterly Report</span>
            <span class="text-green-500">In 2 weeks</span>
          </li>
        </ul>
      </div>

      <!-- Time Tracking Card -->
      <div class="bg-white p-6 rounded-lg shadow-md text-center">
        <h2 class="text-xl font-bold mb-2">Time Tracking</h2>
        <p class="text-sm text-gray-600 mb-4">Monitor your work sessions</p>
        <i class="far fa-clock text-blue-500 text-6xl mb-4"></i>
        <div class="text-4xl font-bold mb-4" id="elapsed-time">00:00</div>
        <button class="bg-blue-600 text-white px-4 py-2 rounded-md" id="track-btn">Start Tracking</button>
      </div>

      <!-- Goals Card -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-bold mb-2">Goals</h2>
        <p class="text-sm text-gray-600 mb-4">Your current objectives</p>
        <ul class="space-y-2">
          <li class="flex items-center space-x-2">
            <i class="fas fa-bullseye text-green-500"></i>
            <span>Complete project milestone</span>
          </li>
          <li class="flex items-center space-x-2">
            <i class="fas fa-bullseye text-yellow-500"></i>
            <span>Learn new programming language</span>
          </li>
          <li class="flex items-center space-x-2">
            <i class="fas fa-bullseye text-blue-500"></i>
            <span>Improve time management skills</span>
          </li>
        </ul>
        <button class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md w-full mt-4">
          <i class="fas fa-plus mr-2"></i>Add New Goal
        </button>
      </div>

    </div>
  </div>

  <script>
// idk why 
    let isTracking = false;
    let elapsedTime = 0;
    let interval;

    function formatTime(seconds) {
      const minutes = Math.floor(seconds / 60);
      const remainingSeconds = seconds % 60;
      return `${String(minutes).padStart(2, '0')}:${String(remainingSeconds).padStart(2, '0')}`;
    }

    document.getElementById('track-btn').addEventListener('click', function () {
      if (isTracking) {
        clearInterval(interval);
        isTracking = false;
        this.innerText = 'Start Tracking';
        elapsedTime = 0;
        document.getElementById('elapsed-time').innerText = formatTime(elapsedTime);
      } else {
        isTracking = true;
        this.innerText = 'Stop Tracking';
        interval = setInterval(() => {
          elapsedTime++;
          document.getElementById('elapsed-time').innerText = formatTime(elapsedTime);
        }, 1000);
      }
    });
  </script>
</body>

</html>
