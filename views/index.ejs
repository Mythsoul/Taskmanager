    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const closeSidebar = document.getElementById('closeSidebar');
            const darkModeToggle = document.getElementById('darkModeToggle');
            const html = document.documentElement;
          
            const showTerms = document.getElementById('showTerms');
            const closeTerms = document.getElementById('closeTerms');
            const termsModal = document.getElementById('termsModal');
            const funFactPopup = document.getElementById('funFactPopup');
            const closeFunFact = document.getElementById('closeFunFact');
            const funFactText = document.getElementById('funFactText');

            // Sidebar toggle
            sidebarToggle.addEventListener('click', () => {
                sidebar.classList.toggle('open');
            });

            closeSidebar.addEventListener('click', () => {
                sidebar.classList.remove('open');
            });

            // Dark mode toggle
            darkModeToggle.addEventListener('click', () => {
                html.classList.toggle('dark');
                localStorage.setItem('darkMode', html.classList.contains('dark'));
                updateDarkModeIcon();
            });

            // Check for saved dark mode preference
            if (localStorage.getItem('darkMode') === 'true') {
                html.classList.add('dark');
            }

            function updateDarkModeIcon() {
                const icon = darkModeToggle.querySelector('i');
                if (html.classList.contains('dark')) {
                    icon.classList.remove('fa-moon');
                    icon.classList.add('fa-sun');
                } else {
                    icon.classList.remove('fa-sun');
                    icon.classList.add('fa-moon');
                }
            }

            updateDarkModeIcon();

            // Typed.js initialization
            const typed = new Typed('#typed-text', {
                strings: ['Organize', 'Track', 'Accomplish'],
                typeSpeed: 50,
                backSpeed: 50,
                loop: true
            });

            // Terms modal
            showTerms.addEventListener('click', () => {
                termsModal.classList.remove('hidden');
            });

            closeTerms.addEventListener('click', () => {
                termsModal.classList.add('hidden');
            });

            // Fun fact popup
            function showFunFactPopup() {
                const facts = [
                    "The average person spends 13 years of their life in meetings.",
                    "Multitasking can reduce productivity by up to 40%.",
                    "The most productive day of the week is Tuesday.",
                    "Taking regular breaks can increase productivity by up to 20%.",
                    "The Pomodoro Technique suggests working in 25-minute intervals for optimal focus."
                ];
                funFactText.textContent = facts[Math.floor(Math.random() * facts.length)];
                funFactPopup.classList.remove('hidden');
            }

            closeFunFact.addEventListener('click', () => {
                funFactPopup.classList.add('hidden');
            });

            setTimeout(showFunFactPopup, 30000); // Show fun fact after 30 seconds

            // Fetch and display testimonials
            async function fetchTestimonials() {
                try {
                    const response = await fetch('https://randomuser.me/api/?results=3');
                    const data = await response.json();
                    const testimonials = data.results.map(user => ({
                        name: `${user.name.first} ${user.name.last}`,
                        image: user.picture.medium,
                        job: `${user.location.city} ${getRandomJob()}`,
                        text: getRandomTestimonial()
                    }));
                    displayTestimonials(testimonials);
                } catch (error) {
                    console.error('Error fetching testimonials:', error);
                }
            }

            function displayTestimonials(testimonials) {
                const container = document.getElementById('testimonials-container');
                testimonials.forEach(testimonial => {
                    const testimonialElement = document.createElement('div');
                    testimonialElement.className = 'bg-white rounded-lg p-6 shadow-lg';
                    testimonialElement.innerHTML = `
                        <div class="flex items-center mb-4">
                            <img src="${testimonial.image}" alt="${testimonial.name}" class="w-12 h-12 rounded-full mr-4">
                            <div>
                                <h3 class="font-semibold text-lg text-gray-800">${testimonial.name}</h3>
                                <p class="text-gray-600">${testimonial.job}</p>
                            </div>
                        </div>
                        <p class="text-gray-700">"${testimonial.text}"</p>
                    `;
                    container.appendChild(testimonialElement);
                });
            }

            function getRandomJob() {
                const jobs = ['Designer', 'Developer', 'Manager', 'Entrepreneur', 'Freelancer', 'Student'];
                return jobs[Math.floor(Math.random() * jobs.length)];
            }

            function getRandomTestimonial() {
                const testimonials = [
                    "TaskManager has revolutionized the way I work. I'm more productive than ever!",
                    "I can't believe this amazing tool is completely free. It's a game-changer for my business.",
                    "The intuitive interface and powerful features make TaskManager stand out from the rest.",
                    "TaskManager has helped our team stay organized and focused on what matters most.",
                    "I love how TaskManager adapts to my workflow. It's like it was made just for me!"
                ];
                return testimonials[Math.floor(Math.random() * testimonials.length)];
            }

            fetchTestimonials();

        }); 
    </script>
