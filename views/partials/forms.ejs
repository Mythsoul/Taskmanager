
<dialog id="sendfeedbackDialog" class="box p-6 rounded-lg shadow-lg">
    <h3 class="text-lg font-semibold mb-3 text-blue-500">
        <i class="fas fa-comments mr-2"></i> Send Feedback
    </h3>
    <form id="feedbackForm" method="dialog">
        <div class="mb-4">
            <label for="feedback" class="block text-sm font-medium">Feedback</label>
            <textarea id="feedback" required
                class="mt-1 p-2 block w-full border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 bg-gray-700"></textarea>
        </div>
        <div class="mb-4">
            <label for="feedbackemail" class="block text-sm font-medium">Email</label>
            <input type="email" id="feedbackemail" 
                class="mt-1 p-2 block w-full border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 bg-gray-700" placeholder="OPTIONAL">
            </div>
        <div class="flex justify-end">
            <button id="sendFeedbackBtn" type="submit"
                class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500">
                Send
            </button>
            <button id="closeFeedbackDialog"
                class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500 ml-3">Cancel</button>
        </div>
    </form>
</dialog>
