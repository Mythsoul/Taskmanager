<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register Page</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/60cc3418d0.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gray-900 flex items-center justify-center min-h-screen">

  <form class="form bg-gray-800 rounded-2xl p-6 text-white w-80 space-y-4 shadow-lg">
    <p id="heading" class="text-center text-xl font-semibold mb-4">Register</p>

    <!-- Name Field -->
    <div class="flex items-center bg-gray-700 rounded-lg p-2">
      <svg class="input-icon w-5 h-5 text-gray-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
        <path d="M8 7a3 3 0 1 0 0-6 3 3 0 0 0 0 6zM8 8a5 5 0 0 0-4.582 2.9c-.136.297-.276.572-.408.858A3.987 3.987 0 0 0 0 16h16a3.986 3.986 0 0 0-3.01-4.042A15.476 15.476 0 0 0 8 8z"/>
      </svg>
      <input type="text" placeholder="Full Name" class="input-field bg-transparent border-none outline-none text-gray-300 ml-2 w-full" disabled/>
    </div>

    <!-- Email Field -->
    <div class="flex items-center bg-gray-700 rounded-lg p-2">
      <svg class="input-icon w-5 h-5 text-gray-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-.5v.964l6 3.6 6-3.6V3.5a.5.5 0 0 0-.5-.5H2a.5.5 0 0 0-.5.5zm11.672 3.276L8.5 9.417a.5.5 0 0 1-.5 0L2.328 7.776a.5.5 0 0 0-.656.686L8 11.383l6.328-3.921a.5.5 0 1 0-.656-.686z"/>
      </svg>
      <input type="email" placeholder="Email" class="input-field bg-transparent border-none outline-none text-gray-300 ml-2 w-full" disabled/>
    </div>

    <!-- Password Field -->
    <div class="flex items-center bg-gray-700 rounded-lg p-2">
      <svg class="input-icon w-5 h-5 text-gray-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
      </svg>
      <input type="password" placeholder="Password" class="input-field bg-transparent border-none outline-none text-gray-300 ml-2 w-full" disabled />
    </div>

    <!-- Confirm Password Field -->
    <div class="flex items-center bg-gray-700 rounded-lg p-2">
      <svg class="input-icon w-5 h-5 text-gray-400" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
      </svg>
      <input type="password" placeholder="Confirm Password" class="input-field bg-transparent border-none outline-none text-gray-300 ml-2 w-full"disabled />
    </div>

    <!-- Main Register Button -->
    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition "disabled>Register</button>

    <!-- Social Registration Options -->
    <div class="mt-6 space-y-3">
      <button type="button" class="w-full flex items-center justify-center bg-red-600 py-2 rounded-lg hover:bg-red-700 transition text-white" disabled>
        <i class="fab fa-facebook mr-2"></i>
        <p class="text-lg bold">Register with Facebook</p>
      </button>

      <button type="button" class="w-full flex items-center justify-center bg-gray-800 py-2 rounded-lg hover:bg-gray-700 transition text-white" disabled>
        <i class="fab fa-github fa-solid mr-2"></i>
        <p class="text-lg bold"> Register with GitHub</p>
      </button>

      <button type="button" class="w-full flex items-center justify-center bg-blue-500 py-2 rounded-lg hover:bg-blue-600 transition text-white">
        <i class="fab fa-google fa-solid mr-2"></i>
        <a href="/auth/google" class="text-lg bold">Register with Google</a>
      </button>
    </div>

    <!-- Notification for Google Registration Only -->
    <p class="text-center text-xs text-gray-400 mt-4">Only Google registration is currently available</p>
    
    <!-- Redirect to Login -->
    <p class="text-center text-sm text-gray-400 mt-4">Already have an account? 
      <a href="/login" class="text-blue-500 hover:text-blue-700">Login here</a>
    </p>
  </form>

</body>
</html>
