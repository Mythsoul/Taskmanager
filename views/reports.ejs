<!-- reports.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Reports</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/60cc3418d0.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/tailwind.css">


    <style>
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideIn {
            from {
                transform: translateX(-100%);
            }
            to {
                transform: translateX(0);
            }
        }

        .report-card {
            animation: fadeInUp 0.5s ease-out;
            transition: all 0.3s ease;
        }

        .report-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(100, 100, 255, 0.1);
        }

        .progress-bar {
            width: 0;
            transition: width 0.3s ease-in-out;
        }

        .report-card:hover .progress-bar {
            width: 100%;
        }

        .status-dot {
            transition: all 0.3s ease;
        }

        .report-card:hover .status-dot {
            transform: scale(1.2);
        }
    </style>
</head>
<%-include("partials/sidebar.ejs")%>
<body class="bg-gray-100 ">
    
<%-include("partials/header.ejs")%>
    <div class="max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="flex flex-col md:flex-row justify-between items-center mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 md:mb-0">Your Reports</h1>
            <div class="flex gap-4 w-full md:w-auto">
                <div class="relative flex-1 md:flex-initial">
                    <input 
                        type="search" 
                        placeholder="Search reports..." 
                        class="w-full px-4 py-2 rounded-lg border border-purple-200 focus:outline-none focus:ring-2 focus:ring-purple-400 bg-white/90"
                    >
                </div>
                <button 
                    class="px-6 py-2 bg-purple-600 text-white rounded-lg shadow-lg hover:bg-purple-700 transition-all duration-300 flex items-center gap-2"
                    onclick="showAddReportModal()"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add Report
                </button>
            </div>
        </div>

     

        <!-- Reports Grid -->
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <% reports.forEach((report) => { %>
                <div class="report-card bg-white rounded-xl shadow-md overflow-hidden">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            
                        </div>
                        <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= report.report_title %></h3>
                        <p class="text-gray-600 mb-4 text-sm"><%= report.report_description %></p>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-2">
                               
                            <div class="flex items-center gap-2">
                                <button class="p-2 text-blue-600 hover:text-blue-800 transition-colors duration-200 hover:bg-blue-50 rounded-full">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </button>
                                <button class="p-2 text-red-600 hover:text-red-800 transition-colors duration-200 hover:bg-red-50 rounded-full">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="progress-bar bg-gradient-to-r from-purple-500 to-indigo-600 h-1"></div>
                </div>
            <% }); %>
        </div>
    </div>

    <%-include("partials/forms.ejs")%>

    <script>
        function showAddReportModal() {
          
            console.log('Add report clicked');
        }

      
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.report-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.animation = `fadeInUp 0.5s ease-out ${index * 0.1}s forwards`;
            });
        });
    </script>
</body>
</html>