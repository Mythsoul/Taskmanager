<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <script type="module" src="/js/tasks.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        @layer base {
            :root {
                --sidebar-bg: 255 255 255;
                --sidebar-fg: 31 41 55;
            }

            .dark {
                --sidebar-bg: 31 41 55;
                --sidebar-fg: 243 244 246;
            }
        }

        body {
            font-family: 'Poppins', sans-serif;
        }

        .task-enter {
            opacity: 0;
            transform: translateY(20px);
        }

        .task-enter-active {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 300ms, transform 300ms;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .task-item {
            animation: fadeInUp 0.3s ease-out forwards;
        }

        .hover-scale {
            transition: transform 0.3s ease;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }
    </style>
</head>

<body class="bg-gradient-to-br from-indigo-50 to-purple-100 dark:from-gray-900 dark:to-purple-900 text-gray-800 dark:text-gray-200 font-sans">
    <div class="flex h-screen overflow-hidden">
        <%- include('partials/sidebar') %>

        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white dark:bg-gray-800 shadow-lg z-10">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 flex justify-between items-center">
                    <h1 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-600">
                        Tasks Dashboard
                    </h1>
                    <button id="add_task_btn"
                        class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg flex items-center transition-colors duration-300">
                        <i class="ri-add-line mr-2"></i>
                        ADD TASK
                    </button>
                </div>
            </header>

            <!-- Main content -->
            <main class="flex-1 overflow-y-auto p-4 container mx-auto">
                <div class="max-w-7xl mx-auto space-y-8 m-3">
                    <!-- Task stats -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover-scale">
                            <h3 class="text-lg font-semibold mb-2">Total Tasks</h3>
                            <p class="text-4xl font-bold text-indigo-600 dark:text-indigo-400">
                                <%= tasks.length %>
                            </p>
                        </div>
                        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover-scale">
                            <h3 class="text-lg font-semibold mb-2">Pending Tasks</h3>
                            <p class="text-4xl font-bold text-yellow-600 dark:text-yellow-400">
                                <%= tasks.filter(task => task.status === 'Pending').length %>
                            </p>
                        </div>
                        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 hover-scale">
                            <h3 class="text-lg font-semibold mb-2">Tasks Completed</h3>
                            <p class="text-4xl font-bold text-green-500 dark:text-green-400">
                                <%= tasks.filter(task => task.status === "Done").length %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Task filters -->
                <div class="flex flex-wrap justify-center m-4 gap-4 max-w-7xl">
                    <button id="all_tasks" class="px-6 py-3 bg-indigo-500 text-white rounded-full hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50 transition-all duration-300 shadow-md transform hover:scale-105">
                        All Tasks
                    </button>
                    <button id="pending_tasks"  class="px-6 py-3 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full hover:bg-gray-100 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition-all duration-300 shadow-md transform hover:scale-105">
                        In Progress
                    </button>
                    <button id="completed_tasks" class="px-6 py-3 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full hover:bg-gray-100 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition-all duration-300 shadow-md transform hover:scale-105">
                        Completed
                    </button>
                </div>

                <!-- Task list -->
                <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 shadow-lg rounded-xl overflow-hidden">
                    <ul class="divide-y divide-gray-200 dark:divide-gray-700" id="taskList">
                        <% tasks.forEach((task) => { %>
                            <li class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-300 task-item"
                                style="animation-delay: 30ms;" data-tasks-status = "<%= task.status %>">
                                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between space-y-2 sm:space-y-0">
                                    <div class="flex-1 min-w-0">
                                        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 truncate">
                                            <%= task.task_name %>
                                        </h3>
                                        <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-6">
                                            <div class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400">
                                                <i class="ri-calendar-line mr-1.5 text-gray-400 dark:text-gray-500"></i>
                                                <%= new Date(task.due_date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                            </div>
                                            <div class="mt-2 flex items-center text-sm">
                                                <i class="ri-time-line mr-1.5 text-gray-400 dark:text-gray-500"></i>
                                                <span id="task-status" class="text-gray-900 dark:text-gray-100" data-tasks-status = "<%= task.status %>">
                                                    <%= task.status %>
                                                </span>
                                            </div>
                                            <div class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400">
                                                <i class="ri-flag-line mr-1.5 text-gray-400 dark:text-gray-500"></i>
                                                Priority: <%= task.priority %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="flex-shrink-0 mt-4 sm:mt-0">
                                        <div class="flex space-x-2">
                                            <button id="update-task-btn"
                                                class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300 transition-colors duration-200"
                                                data-task-id="<%= task.task_id %>">
                                                <i class="ri-edit-line text-xl"></i>
                                                <span class="sr-only">Edit</span>
                                            </button>
                                            <button id="status-pending-btn"
                                                class="text-yellow-600 hover:text-yellow-900 dark:text-yellow-400 dark:hover:text-yellow-300 transition-colors duration-200" data-task-id="<%= task.task_id %>">
                                                <i class="ri-time-line text-xl"></i>
                                                <span class="sr-only">Update Status</span>
                                            </button>
                                            <button id="status-done-btn" class="text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300 transition-colors duration-200" data-task-id="<%= task.task_id %>">
                                                <i class="ri-checkbox-circle-line text-xl"></i>
                                                <span class="sr-only">Update Status</span>
                                            </button>
                                   <button id="delete_task_btn"
                                                class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300 transition-colors duration-200"
                                                data-task-id="<%= task.task_id %>">
                                                <i class="ri-delete-bin-line text-xl"></i>
                                                <span class="sr-only">Delete</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                </div>
                <p class="text-xs sm:text-sm opacity-70">Note : DONE TASKS WILL BE DELETED IN 1HR</p>
            </main>
        </div>
    </div>


    <%- include("partials/forms.ejs") %>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            // Animate task items on load
            const taskItems = document.querySelectorAll('.task-item');
            taskItems.forEach((item, index) => {
                item.style.animationDelay = `${index * 50}ms`;
            });

            // Add hover effect to buttons
            const buttons = document.querySelectorAll('button');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', () => {
                    button.classList.add('scale-105');
                });
                button.addEventListener('mouseleave', () => {
                    button.classList.remove('scale-105');
                });
            });

            // Theme toggle functionality ()
            // const themeToggle = document.getElementById('theme-toggle');
            // themeToggle.addEventListener('click', () => {
            //     document.documentElement.classList.toggle('dark');
            // });
        });
    </script>
</body>

</html>